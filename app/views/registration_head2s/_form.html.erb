       <div class="col-md-8">
<%= simple_form_for(@registration_head2) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :championship, :as => :hidden, :input_html => { :value =>  params[:id]}%>
    <%= f.association :sex , collection: Sex.all(:sex)%>
   <%= f.input :fecha, :as => :hidden, :input_html => { :value =>  Time.now}%>
