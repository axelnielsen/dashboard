<%= simple_form_for(@registration_head2) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs" >
    <%= f.input :championship_id, :as => :hidden, :input_html => { :value =>  params[:id]}%>  
    <%= hidden_field_tag(:id, params[:id]) %>

    NOMBRES<%= f.input :name ,label: false, required:  true ,  :input_html => { :onblur => "upperName()"}%>
    APELLIDOS<%= f.input :lastname, label: false, required:  true,   :input_html => { :onblur => "upperLastName()"} %>
    SEXO<%= f.association :sex, label: false%>
    FECHA DE NACMIENTO<%= f.date_field :an , class: 'form-control'%>
    CLUB<%= f.input :club ,  label: false, required:  true  ,:input_html => { :onblur => "upperClub()"}%>
    REGIÓN<%=f.input :region,:collection => [["I de Tarapacá ", 1], ["II de Antofagasta", 2], ["III de Atacama", 3], ["IV de Coquimbo", 4], ["V de Valparaíso", 5], ["VI del Libertador General Bernardo O’Higgins", 6], ["VII del Maule", 7], ["VIII de Concepción", 8], ["IX de la Araucanía", 9], ["X de Los Lagos", 10], ["XI de Aysén del General Carlos Ibañez del Campo", 11], ["XII de Magallanes y de la Antártica Chilena", 12], ["Metropolitana de Santiago", 13], ["XIV de Los Ríos", 14], ["XV de Arica y Parinacota", 15], ["XVI del Ñuble ", 16]], class: 'form-control', label: false%>
    RUT<%= f.input :dni , required:  true ,label: false, :input_html => { :onblur => "getData()"}%>
  </div>



 <div class="form-actions">
    <%= f.button :submit, value: "SIGUIENTE", class: "btn btn-success" %>
  </div>
<% end %>
