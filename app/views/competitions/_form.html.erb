
<%= simple_form_for(@competition) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :hour %>
    <%= f.association :sport %>
    <%= f.association :competition_type %>
    <%= f.association :category %>
    <%= f.association :sex %>
    <%= f.association :stage %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
