<p id="notice"><%= notice %></p>

<h1>Athletes</h1>

<table>
  <thead>
    <tr>
      <th>Names</th>
      <th>Surnames</th>
      <th>Sex</th>
      <th>Birthdate</th>
      <th>Birthyear</th>
      <th>Rut</th>
      <th>Idclub</th>
      <th>Idregion</th>
      <th>Cellphone</th>
      <th>Mail</th>
      <th>Idcoach</th>
      <th>Size</th>
      <th>Height</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @athletes.each do |athlete| %>
      <tr>
        <td><%= athlete.names %></td>
        <td><%= athlete.surnames %></td>
        <td><%= athlete.sex %></td>
        <td><%= athlete.birthdate %></td>
        <td><%= athlete.birthyear %></td>
        <td><%= athlete.rut %></td>
        <td><%= athlete.idClub %></td>
        <td><%= athlete.idRegion %></td>
        <td><%= athlete.cellPhone %></td>
        <td><%= athlete.mail %></td>
        <td><%= athlete.idCoach %></td>
        <td><%= athlete.size %></td>
        <td><%= athlete.height %></td>
        <td><%= link_to 'Show', athlete %></td>
        <td><%= link_to 'Edit', edit_athlete_path(athlete) %></td>
        <td><%= link_to 'Destroy', athlete, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

