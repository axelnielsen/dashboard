
    <!-- Main content -->
    <section class="content container-fluid">
    
      <p id="notice"><%= notice %></p>

<div class="row">
<div class="col-md-12">
    <div class="callout callout-warning">
                <h4><%= @championship.name %></h4>

    </div>
    <div class="row">
   <% if @championship.stages.any? %>
  
    <% @championship.stages.each do |stage| %>
    <div class="col-md-12">
<div class="box">
            <div class="box-header">
              <h3 class="box-title">HORARIOS</h3>
              <h4 class="box-title"><%=stage.name %> <%=stage.fecha%></h4>
            </div>
            <!-- /.box-header -->
            <div class="box-body no-padding">
              <table class="table">
        <thead>
          <tr>
          <th>HORA</th>
            <th>PRUEBA</th>
            <th>CATEGORÍA</th>
          <th>FINAL</th>
            <th>RESULTADOS</th>
            <th>STARTLIST</th>
          </tr>
        </thead>
        <tbody>
          <% @championship.competitions.where(:stage => stage.id).order(hour: :asc).each do |competition| %>
                    <tr>
            <td data-label="HORA"> <%=competition.hour.strftime('%H:%M')%></td>
            <td data-label="PRUEBA"> <%=competition.sport.name%></td>
          <td data-label="FINAL"> <%=competition.category.name%></td>
          <td data-label="CATEGORÍA"> <%=competition.sex.sex%></td>
          <td data-label="RESULTADOS">
            <%if competition.id==9  || competition.id==19 || competition.id==27 || competition.id==39 || competition.id==44 || competition.id==46%>
            <%=link_to "RESULTADOS", jump_head2s_path(:competition_id=>competition.id), class: "btn btn-warning"%>


 <% elsif competition.id==8 || competition.id==11 || competition.id==13 || competition.id==14 || competition.id==20 || competition.id==23 || competition.id==26 || competition.id==29 || competition.id==32 || competition.id==41 || competition.id==47 || competition.id==48%>
            <%=link_to "RESULTADOS", throw_head2s_path(:competition_id=>competition.id), class: "btn btn-warning"%>



 <% elsif competition.id==4 || competition.id==10 || competition.id==18 || competition.id==40 || competition.id==43 || competition.id==54 %>
            <%=link_to "RESULTADOS", hjump_head2s_path(:competition_id=>competition.id), class: "btn btn-warning"%>

            <%else%>
          <%=link_to "RESULTADOS", track_head2s_path(:competition_id=>competition.id), class: "btn btn-warning"%>
            
          <%end%>
          </td>
          <td><%= link_to "STARTLIST", start_heads_path(:competition_id=>competition.id), class: "btn btn-primary" %></td>
          </tr>
  
   <%end%>
     </tbody>
      </table>
     
            </div>
            <!-- /.box-body -->
          </div>
</div>

<% end %>
  
<% end %>

</div>



