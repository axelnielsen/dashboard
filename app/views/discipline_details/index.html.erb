<p id="notice"><%= notice %></p>

<h1>Discipline Details</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Value</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @discipline_details.each do |discipline_detail| %>
      <tr>
        <td><%= discipline_detail.name %></td>
        <td><%= discipline_detail.value %></td>
        <td><%= link_to 'Show', discipline_detail %></td>
        <td><%= link_to 'Edit', edit_discipline_detail_path(discipline_detail) %></td>
        <td><%= link_to 'Destroy', discipline_detail, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

